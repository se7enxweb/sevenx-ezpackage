        <ezobject:attribute xmlns:ezremote="http://ez.no/ezobject" ezremote:id="646" ezremote:identifier="intro" name="Summary" type="ezxmltext">
          <section xmlns:image="http://ez.no/namespaces/ezpublish3/image/" xmlns:xhtml="http://ez.no/namespaces/ezpublish3/xhtml/" xmlns:custom="http://ez.no/namespaces/ezpublish3/custom/">
            <paragraph>To provide you with full control over your website, Exponential has many features that make it easy to manage both content and users.</paragraph>
          </section>
        </ezobject:attribute>
